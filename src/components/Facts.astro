<div class="fackt1">
  <h3 class="ani1">Pierre sælger 2 millioner fotos om året</h3>
</div>
<br />
<div class="fackt2">
  <h3 class="ani2">Det svarer til én fotolicens hvert 16. sekund</h3>
</div>
<br />
<div class="fackt3">
  <h3 class="ani3">Du ser hans fotos ca. 2 gange om dagen</h3>
</div>

<style>
  .fackt1 {
    display: grid;
    justify-content: right;
    text-align: center;
    margin-right: 15%;
    padding-bottom: 10%;
  }

  .fackt2 {
    display: grid;
    justify-content: left;
    text-align: center;
    margin-left: 15%;
    padding-bottom: 10%;
  }

  .fackt3 {
    display: grid;
    justify-content: right;
    text-align: center;
    margin-right: 15%;
  }

  .fackt1,
  .fackt3 {
    -webkit-animation: slide-in-right 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
      both;
    animation: slide-in-right 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    animation-duration: 2s;
  }

  @-webkit-keyframes slide-in-right {
    0% {
      -webkit-transform: translateX(1000px);
      transform: translateX(1000px);
      opacity: 0;
    }
    100% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
      opacity: 1;
    }
  }

  .fackt2 {
    -webkit-animation: slide-in-left 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)
      both;
    animation: slide-in-left 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }
  @-webkit-keyframes slide-in-left {
    0% {
      -webkit-transform: translateX(-1000px);
      transform: translateX(-1000px);
      opacity: 0;
    }
    100% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
      opacity: 1;
    }
  }
  .fackt1,
  .fackt2,
  .fackt3 {
    -webkit-animation: flicker-1 2s linear infinite both;
    animation: flicker-1 2s linear infinite both;
  }
  @-webkit-keyframes flicker-1 {
    0%,
    100% {
      opacity: 1;
    }
    41.99% {
      opacity: 1;
    }
    42% {
      opacity: 0;
    }
    43% {
      opacity: 0;
    }
    43.01% {
      opacity: 1;
    }
    47.99% {
      opacity: 1;
    }
    48% {
      opacity: 0;
    }
    49% {
      opacity: 0;
    }
    49.01% {
      opacity: 1;
    }
  }
  @keyframes flicker-1 {
    0%,
    100% {
      opacity: 1;
    }
    41.99% {
      opacity: 1;
    }
    42% {
      opacity: 0;
    }
    43% {
      opacity: 0;
    }
    43.01% {
      opacity: 1;
    }
    47.99% {
      opacity: 1;
    }
    48% {
      opacity: 0;
    }
    49% {
      opacity: 0;
    }
    49.01% {
      opacity: 1;
    }
  }

  @media (max-width: 450px) {
    .fackt1,
    .fackt3 {
      margin: 10%;
    }
  }
</style>

<script>
  import { slide } from "astro:transitions";
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".fackt1", {
    x: 500,
    duration: 5,
    scrollTrigger: ".fackt1",
    start: "start 90%",
  });

  gsap.from(".fackt2", {
    x: -500,
    duration: 5,
    scrollTrigger: ".fackt2",
    start: "start 20%",
  });

  gsap.from(".fackt3", {
    x: 500,
    scrollTrigger: ".fackt3",
    start: "start 70%",
    end: "bottom 50%",
    duration: 5,
  });
</script>
