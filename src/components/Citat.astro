<div class="glitch-wrapper">
  <div
    class="glitch"
    data-text="Nu kan jeg leve livet igen. Jeg føler mig frisk. Jeg føler mig fri. Jeg
  føler mig genfødt."
  >
    Nu kan jeg leve livet igen. Jeg føler mig frisk. Jeg føler mig fri. Jeg
    føler mig genfødt.
  </div>
</div>

<style>
  .glitch-wrapper {
    width: 100%;
    height: 100%;
    text-align: center;
    background-color: #3a1746;
    display: grid;
    justify-content: center;
    text-align: center;
    padding: 8%;
  }
  .glitch {
    position: relative;
    font-size: 8em;
    font-weight: bold;
    color: #ffffff;
    letter-spacing: 3px;
    z-index: 1;
    font-family: "TradeWinds";
  }
  .glitch:before,
  .glitch:after {
    display: block;
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.8;
  }
  .glitch:before {
    animation: glitch-it 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
    color: #00ffff;
    z-index: -1;
  }
  .glitch:after {
    animation: glitch-it 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) reverse both
      infinite;
    color: #ff00ff;
    z-index: -2;
  }

  @keyframes glitch-it {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
    to {
      transform: translate(0);
    }
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".glitch", {
    scrollTrigger: {
      trigger: ".glitch-wrapper",
      start: "top bottom",
      end: "center center",
      scrub: true,
      // markers: true,
    },
    opacity: 0,
  });
</script>
